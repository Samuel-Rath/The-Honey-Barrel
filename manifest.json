{
    "manifest_version": 3,              // Use the latest manifest version
    "name": "BAXUS Price Finder",
    "version": "0.1.0",
    "description": "Compare wine & whisky prices with BAXUS marketplace deals.",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "permissions": [
      "storage",                        // To cache API results & settings
      "activeTab"                       // To inject content scripts on demand
    ],
    "host_permissions": [
      "https://services.baxus.co/*",    // BAXUS API
      "*://*.example-retailer.com/*",   // Retailer domains (add each here)
      "*://*.another-retailer.com/*"
    ],
    "background": {
      "service_worker": "background/background.js"
    },
    "content_scripts": [
      {
        "matches": [
          "*://*.example-retailer.com/*",
          "*://*.another-retailer.com/*"
        ],
        "js": ["content_scripts/scraper.js"]
      }
    ],
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png"
      }
    }
  }
  